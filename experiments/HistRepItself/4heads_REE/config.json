{
  "mediapipe_handover": {
    "input_n": 50,
    "output_n": 25
  },

  "dataset": {
    "type": "mediapipe_handover",
    "batch_size": 16,
    "serial_batches": false,
    "drop_last_batch": true,
    "n_threads": 1,
    "test": 0
  },

  "networks": {
    "reg": {
      "type": "motion_attention",
      "hyper_params": {
        "input_n": 50,
        "output_n": 25,
        "in_features": 27,
        "kernel_size": 10,
        "d_model": 512,
        "dct_n": 20,
        "itera": 1,
        "num_heads": 4,
        "goal_condition": true,
        "fusion_model": 1,
        "obstacle_condition": false,
        "phase_condition": false,
        "intention_condition": false,
        "robot_path_condition": false,
        "intention_prediction": false,
        "phase_prediction": false
      }
    }
  },

  "model": {
    "load_epoch": -1,
    "type": "HistRepItself",
    "master_gpu": 0,
    "reg_gpus": [0]
  },

  "train": {
    "nepochs_no_decay": 10,
    "nepochs_decay": 9990,
    "reg_lr": 0.001,
    "num_iters_validate": 10
  },

  "losses": {
      "type": "L_total",
      "weights": {
        "wx": 1,
        "wy": 1,
        "wz": 1,
        "wo": -1,
        "we": 1,
        "wf": -1,
        "wp": -1,
        "wi": -1
    }
  }
}


